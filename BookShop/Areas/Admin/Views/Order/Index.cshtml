@model IEnumerable<BookShop.Areas.Admin.Models.Order>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <h1 style="font-family: Arial, Helvetica, sans-serif; text-align:center; ">TRANG QUẢN LÝ HÓA ĐƠN</h1>
    <table class="table table-striped table-hover" border="1">
        <tr style="background-color:cadetblue">
            <th>#</th>
            <th>Họ tên khách hàng</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Số điện thoại</th>
            <th>Ngày mua</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>

        @foreach (var order in Model)
        {
            <tr>
                <td>
                    @order.od_ID
                </td>
                <td>
                    @order.fullname
                </td>
                <td>
                    @order.email
                </td>
                <td>
                    @order.address
                </td>
                <td>
                    @order.phone
                </td>

                <td>
                    @order.order_Date
                </td>

                <td>
                    @order.status
                </td>
               

                <td>
                    <button class="btn btn-success"><a style="color:white" href="Order/ViewOrder?Id=@order.od_ID">Chi tiết</a></button>
                </td>

            </tr>
        }
    </table><br>
</div>

