
@{
    ViewData["Title"] = "ViewOrder";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<BookShop.Areas.Admin.Models.Order_detail>


<div class="content-wrapper">
    @foreach (var order_detail in Model) {
        <h1 style="font-family: Arial, Helvetica, sans-serif;"> Chi tiết hóa đơn mã  @order_detail.od_ID </h1>
        break;
    }


    <table class="table table-striped table-hover" border="1">
        <tr style="background-color:darkslategray">
            <th style="color:white">Sản phẩm</th>
            <th style="color:white">Số lượng</th>
            <th style="color:white">Giá</th>
            <th style="color:white">Thành tiền</th>
        </tr>

        @foreach (var order_detail in Model)
        {
            <tr>
                <td>@order_detail.pd_title</td>
                <td>@order_detail.quantity</td>
                <td>@order_detail.price</td>
                <td>@order_detail.total</td>
            </tr>
        }
    </table><br />

    @foreach (var order_detail in Model)
    {
        <p1 style="font-family: Arial, Helvetica, sans-serif;">Tổng tiền: @order_detail.sub_total </p1>
        break;
    }

</div>