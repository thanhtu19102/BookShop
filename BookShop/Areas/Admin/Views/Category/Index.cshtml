@model IEnumerable<BookShop.Areas.Admin.Models.Category>
@using BookShop.Areas.Admin.Models
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<<div class="content-wrapper">
    <h1 style="font-family: Arial, Helvetica, sans-serif; text-align:center; ">TRANG QUẢN LÝ DANH MỤC</h1>
    
    <table class="table table-striped table-hover" border="1">
        <tr style="background-color:green">
            <th>#</th>
            <th>Tên danh mục</th>
            <th>Chức năng</th>
        </tr>
    @foreach (var item in Model)
   {
       <tr>
           <td>@item.cat_ID</td>
           <td>@item.name</td>
           <td>
            <button class="btn btn-success"><a style="color:white" href="Category/ViewCategory?Id=@item.cat_ID">Sửa</a></button>
            <button class="btn btn-danger"><a style="color:white" href="Category/DeleteCategory?Id=@item.cat_ID">Xóa</a></button>
            </td>
       </tr>
       
   }
    </table><br>
    <div>
        <button class="btn btn-primary" style="float:right"><a style="color:white;" href="Category/EnterCategory">Thêm Danh Mục</a></button>
    </div>
</div>



