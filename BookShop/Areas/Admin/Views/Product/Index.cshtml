@model IEnumerable<BookShop.Areas.Admin.Models.Product>
@{
    ViewData["Title"] = "TRANG QUẢN LÝ SẢN PHẨM";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <h1 style="text-align:center">TRANG QUẢN LÝ SẢN PHẨM</h1>
    <table class="table table-striped table-hover" border="1">
        <tr style="background-color:green">
            <th>#</th>
            <th>Tên Sản Phẩm</th>
            <th>Hình Ảnh</th>
            <th>Số Lượng</th>
            <th>Giá</th>
            <th>Danh Mục</th>
            <th>Chức năng</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.pd_ID
                </td>
                <td>
                    @item.title
                </td>
                <td>

                    <img style="height:100px; display: block;margin-left: auto;margin-right: auto; width: 100px;" src="/AdminAssets/dist/img/@item.thumbnail">
                </td>
                <td>
                    @item.quantity
                </td>
                <td>
                    @item.price
                </td>
                <td>
                    @item.cat_name
                </td>
                <td>
                    <button class="btn btn-success"><a style="color:white" href="Product/ViewProduct?Id=@item.pd_ID">Sửa</a></button>
                    <button class="btn btn-danger"><a style="color:white" href="Product/DeleteProduct?Id=@item.pd_ID">Xóa</a></button>
                </td>

            </tr>
        }
    </table><br>
    <button class="btn btn-primary" style="float:right"><a style="color:white;" href="Product/EnterProduct">Thêm Sản Phẩm</a></button>
</div>


